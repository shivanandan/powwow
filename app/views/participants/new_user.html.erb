<h2>Add a Reviewer / Administrator</h2>
<hr>
<%= form_for @user, :url => { :action => "create_user" }, :method => :POST, :html => {:class => "nifty_form"} do |f| %>

<ul>
<% @user.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
<% end %>
</ul>


<div class="row">
	<div class="col-lg-6">

		  <div class="page-header">
			<h4>Basic Information</h4>
		</div>

		  <div class="form-group">
		  	<%= f.label :first_name %> <br>
		  	<%= f.text_field :first_name, placeholder: "  First name as in passport", class: 'form-control', required: true %>
		  </div>

		  <div class="form-group">
		  	<%= f.label :middle_name %> <br>
		  	<%= f.text_field :middle_name, placeholder: " Middle name as in passport", class: 'form-control' %>
		  </div>

		  <div class="form-group">
		  	<%= f.label :last_name %> <br>
		  	<%= f.text_field :last_name, placeholder: " Last name as in passport", class: 'form-control', required: true  %>
		  </div>

		  <div class="form-group">

			 <label>Gender</label>
		  	<div class="row">
		  		<div class="radio col-lg-3">
			  		<label>
			  		<%= f.radio_button :gender, 'Male', :checked => true %>
					Male
			  		</label>
			  	</div>
			  	<div class="radio col-lg-3">
			  		<label>
			  	 	<%= f.radio_button :gender, 'Female' %>
			  	 	Female
			  		</label>
			  	</div>
			  	<div class="radio col-lg-3">
			  		<label>
			  		<%= f.radio_button :gender, 'Other' %>
			  		Other
			  		</label>
			  	</div>
		  	</div>


		  </div>

		  <div class="studentsqs">
				<div class="form-group">
					<label>User role</label>
					<div class="row">
						<div class="radio col-lg-3">
							<label><input checked='checked' type="radio" name="user[role]" value="reviewer">Reviewer</label>
						</div>
						<div class="radio col-lg-3">
							<label><input type="radio" name="user[role]" value="resourceperson">Resourceperson</label>
						</div>
						<div class="radio col-lg-3">
							<label><input type="radio" name="user[role]" value="admin">Administrator</label>
						</div>
					</div>
				</div>
			</div>
	</div>
</div>
  <div class="page-header">
	<h4>Login Details</h4>
</div>

  <div class="form-group">
  	<%= f.label :email %> <br>
  	<p class="text-muted">
  		The primary email address used for all correspondence.
  	</p>
	  <%= f.email_field :email, placeholder: " Your email address" %>
  </div>

  <div><%= f.submit "Update User", :class=>'btn btn-success' %></div>
<% end %>


<script type="text/javascript">

</script>
