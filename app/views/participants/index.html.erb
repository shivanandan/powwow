<h1>All Participants</h1>

<table id="" class="table table-striped table-hover table-bordered datatable">
	<thead>
    <tr>
	<th>Full Name</th>
	<th>Country</th>
	<th>Email</th>
	<th>Gender</th>
	<th>Title</th>
	<th>Institutional Affiliation</th>
	<th>Phone</th>
	<th>Ticket</th>
	<th>Role</th>
	<th>Actions</th>
    </tr>
  </thead>

<tbody>
<% @users.each do |u| %>
<tr>
	<td><%= u.full_name %></td>
	<td><%= u.nationality %></td>
	<td><%= u.email  %></td>
	<td><%= u.gender %></td>
	<td><%= u.title %></td>
	<td><%= u.institutional_affiliation %></td>
	<td><%= u.phone %></td>
	<td><%= u.ticket_number %><%= raw "<span class='text-danger' title='Not Registered with doattend'>✖</span>" if u.ticket_number.nil? %></td>
	<td><%= u.role%></td>
	<td>
		<%= link_to "Edit", edit_participant_path(u.id) %> 
		<% if u.passportless? %>
		• <a href="<%= u.passportscan %>">Download Passport</a>
		<% end %>
	</td>
</tr>
<% end %>
</tbody>
</table>

<br><br>